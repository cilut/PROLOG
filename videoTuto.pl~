

nat(0).
nat(s(X)) :- nat(X).

less_or_equal(0, X) :- nat(X).
less_or_equal(s(X), s(Y)) :- less_or_equal(X,Y).

%pieza(anchura, altura, profundidad, color).
p(s(s(0)), s(s(0)), s(0), red).

progenitor(pedro, [luis, jose]).
progenitor(luis, [jessus, puta, jesus]).

primerHijo(P,Hijo) :- progenitor(P,[Hijo|_]).
